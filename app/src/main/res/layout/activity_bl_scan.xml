<?xml version="1.0" encoding="utf-8"?>
<com.zy.ppmusic.widget.DragFinishLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_bl_content"
    android:background="@color/colorWhite"
    tools:ignoreViewBinding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        layout="@layout/app_bar_bl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/show_device_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</com.zy.ppmusic.widget.DragFinishLayout>
