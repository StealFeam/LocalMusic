<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/rb_choose_parent"
        android:layout_width="@dimen/dp200"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp10"
        android:background="@drawable/layout_shape_round_white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rb_choose_custom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp30"
            android:textSize="14sp"
            android:text="@string/choose_custom_style" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rb_choose_system"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp30"
            android:layout_marginTop="@dimen/dp5"
            android:textSize="14sp"
            android:text="@string/choose_system_style" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>
